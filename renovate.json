{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/scripts/launch4j-version.txt/"
      ],
      "matchStrings": [
        "^(?<currentValue>.*)$"
      ],
      "datasourceTemplate": "sourceforge",
      "versioningTemplate": "regex:^(?<minor>\\d+)$",
      "depNameTemplate": "launch4j",
      "extractVersionTemplate": "^3\\.(?<minor>\\d+)$"
    }
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "scripts/launch4j-version.txt"
      ],
      "groupName": "launch4j",
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "ignorePaths": [
    "lib/",
    "build/",
    "runtime/"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
